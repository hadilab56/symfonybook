{% extends 'base.html.twig' %}

{% block title %}Book Management{% endblock %}

{% block content %}
<div class="container mt-4">
    <h1>Book Management</h1>
    
    <div class="mb-3">
        <a href="{{ path('app_admin_simple_dashboard') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>
    
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Books List</h5>
            <a href="#" class="btn btn-sm btn-primary">Add Book</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <h4>Doctrine ORM Results</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Price</th>
                            <th>ISBN</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for book in books %}
                            <tr>
                                <td>{{ book.id }}</td>
                                <td>{{ book.title }}</td>
                                <td>{{ book.author }}</td>
                                <td>{% if book.price %}{{ book.price }} €{% else %}N/A{% endif %}</td>
                                <td>{{ book.isbn }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="#" class="btn btn-sm btn-info">View</a>
                                        <a href="#" class="btn btn-sm btn-primary">Edit</a>
                                        <a href="#" class="btn btn-sm btn-danger">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">No books found via Doctrine ORM</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                
                <h4 class="mt-5">Raw Database Results</h4>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Price</th>
                            <th>ISBN</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for rawBook in rawBooks %}
                            <tr>
                                <td>{{ rawBook.id }}</td>
                                <td>{{ rawBook.title }}</td>
                                <td>{{ rawBook.author }}</td>
                                <td>{% if rawBook.price %}{{ rawBook.price }} €{% else %}N/A{% endif %}</td>
                                <td>{% if rawBook.isbn is defined %}{{ rawBook.isbn }}{% else %}N/A{% endif %}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center">No books found in raw database query</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
